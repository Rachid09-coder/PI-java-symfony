{% extends 'admin_layout.html.twig' %}

{% block title %}Gérer les Catégories - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 0 auto;">
    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 30px;">
        <a href="{{ path('admin_shop_index') }}" style="color: #64748B;"><i class="fas fa-arrow-left"></i></a>
        <h2 style="font-size: 1.5rem; font-weight: 800;">Gestion des Catégories</h2>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1.5fr; gap: 30px;">
        <!-- Formulaire Ajout -->
        <div class="card" style="padding: 25px; height: fit-content;">
            <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px;">Nouvelle Catégorie</h3>
            <form>
                <div style="margin-bottom: 15px;">
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; font-size: 0.85rem;">Nom de la catégorie</label>
                    <input type="text" placeholder="Ex: Livres Numériques" style="width: 100%; padding: 12px; border: 1px solid #E2E8F0; border-radius: 10px; outline: none;">
                </div>
                <div style="margin-bottom: 15px;">
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; font-size: 0.85rem;">Description</label>
                    <textarea rows="2" placeholder="Brève description..." style="width: 100%; padding: 12px; border: 1px solid #E2E8F0; border-radius: 10px; outline: none;"></textarea>
                </div>
                <div style="margin-bottom: 15px;">
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; font-size: 0.85rem;">Icône (FontAwesome class)</label>
                    <input type="text" placeholder="fas fa-book" style="width: 100%; padding: 12px; border: 1px solid #E2E8F0; border-radius: 10px; outline: none;">
                </div>
                <div style="margin-bottom: 20px;">
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; font-size: 0.85rem;">Couleur du badge</label>
                    <div style="display: flex; gap: 10px;">
                        <div style="width: 30px; height: 30px; border-radius: 50%; background: #6366F1; cursor: pointer; border: 2px solid white; box-shadow: 0 0 0 2px #6366F1;"></div>
                        <div style="width: 30px; height: 30px; border-radius: 50%; background: #10B981; cursor: pointer;"></div>
                        <div style="width: 30px; height: 30px; border-radius: 50%; background: #F59E0B; cursor: pointer;"></div>
                        <div style="width: 30px; height: 30px; border-radius: 50%; background: #EF4444; cursor: pointer;"></div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary" style="width: 100%; background: #3B49A2; padding: 12px; border-radius: 10px;">Créer la Catégorie</button>
            </form>
        </div>

        <!-- Liste des Catégories -->
        <div class="card" style="padding: 25px;">
            <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px;">Catégories Existantes</h3>
            <div style="display: flex; flex-direction: column; gap: 12px;">
                {% for cat in ['Livres', 'Équipements', 'Logiciels', 'Accessoires'] %}
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border: 1px solid #F1F5F9; border-radius: 12px; transition: 0.2s;" onmouseover="this.style.borderColor='#6366F1'">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div style="width: 12px; height: 12px; border-radius: 50%; background: #6366F1;"></div>
                            <span style="font-weight: 700; color: #1E293B;">{{ cat }}</span>
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button style="border: none; background: none; color: #64748B; cursor: pointer;"><i class="fas fa-edit"></i></button>
                            <button style="border: none; background: none; color: #EF4444; cursor: pointer;"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
