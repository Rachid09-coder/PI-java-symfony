<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EduSmart - Dashboard Professeur{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body style="background: #F8FAFC;">
        <div class="app-container">
            <aside class="sidebar" style="background: #1E293B;">
                <div class="sidebar-header">
                    <div class="logo-icon" style="background: #6366F1; color: white;">E</div>
                    <h2 style="font-size: 1.3rem; font-weight: 800; color: white;">EduSmart</h2>
                </div>
                <nav style="margin-top: 30px;">
                    <ul style="list-style: none;">
                        <li><a href="{{ path('admin_dashboard') }}" class="nav-item {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}"><i class="fas fa-chart-pie"></i> <span>Dashboard</span></a></li>
                        <li><a href="{{ path('admin_courses_manage') }}" class="nav-item {{ app.request.get('_route') == 'admin_courses_manage' ? 'active' : '' }}"><i class="fas fa-edit"></i> <span>Gérer les Cours</span></a></li>
                        <li><a href="{{ path('admin_modules_manage') }}" class="nav-item {{ app.request.get('_route') == 'admin_modules_manage' ? 'active' : '' }}"><i class="fas fa-cubes"></i> <span>Gérer les Modules</span></a></li>
                        <li><a href="{{ path('admin_exams_manage') }}" class="nav-item {{ app.request.get('_route') == 'admin_exams_manage' ? 'active' : '' }}"><i class="fas fa-tasks"></i> <span>Gérer Examens</span></a></li>
                        <li><a href="{{ path('admin_shop_index') }}" class="nav-item {{ app.request.get('_route') starts with 'admin_shop' ? 'active' : '' }}"><i class="fas fa-shopping-cart"></i> <span>Boutique</span></a></li>
                        <li><a href="{{ path('admin_certification_index') }}" class="nav-item {{ app.request.get('_route') == 'admin_certification_index' ? 'active' : '' }}"><i class="fas fa-certificate"></i> <span>Certifications</span></a></li>
                    </ul>
                </nav>
                <div style="margin-top: auto; padding: 20px;">
                    <a href="{{ path('student_courses') }}" class="btn btn-primary" style="width: 100%; font-size: 0.8rem; background: #6366F1;">Mode Étudiant</a>
                    <a href="{{ path('app_login') }}" class="nav-item" style="margin-top: 10px;"><i class="fas fa-sign-out-alt"></i> <span>Déconnexion</span></a>
                </div>
            </aside>

            <main class="main-content">
                <div class="header" style="background: white; border-bottom: 1px solid #E2E8F0;">
                    <div class="page-title">Dashboard Professeur</div>
                    <div style="display: flex; align-items: center; gap: 20px;">
                        <span style="font-size: 0.9rem; font-weight: 600; color: #64748B;">Admin Professeur</span>
                        <a href="{{ path('app_profile') }}" title="Gérer mon compte" style="width: 40px; height: 40px; border-radius: 12px; background: #6366F1; display: flex; align-items: center; justify-content: center; color: white; text-decoration: none; transition: 0.3s;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
                            <i class="fas fa-user-tie"></i>
                        </a>
                    </div>
                </div>
                <div style="padding: 30px;">{% block body %}{% endblock %}</div>
            </main>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
