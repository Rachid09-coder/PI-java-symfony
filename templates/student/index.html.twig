{% extends 'base.html.twig' %}

{% block title %}Liste des élèves - EduSmart{% endblock %}
{% block page_title %}Gestion des Élèves{% endblock %}

{% block body %}
    <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--sp-6);">
            <h3 style="font-size: 1.25rem; font-weight: 700;">Annuaire des élèves</h3>
            <div style="display: flex; gap: var(--sp-3);">
                <button class="btn btn-outline"><i class="fas fa-filter"></i> Filtrer</button>
                <button class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un élève</button>
            </div>
        </div>

        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse; text-align: left;">
                <thead>
                    <tr style="border-bottom: 2px solid var(--border-color); color: var(--text-secondary); font-size: 0.875rem;">
                        <th style="padding: var(--sp-4);">Nom</th>
                        <th style="padding: var(--sp-4);">Classe</th>
                        <th style="padding: var(--sp-4);">Email</th>
                        <th style="padding: var(--sp-4);">Statut</th>
                        <th style="padding: var(--sp-4); text-align: right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                        <tr style="border-bottom: 1px solid var(--border-color); transition: background 0.2s;" onmouseover="this.style.backgroundColor='#F8FAFC'" onmouseout="this.style.backgroundColor='transparent'">
                            <td style="padding: var(--sp-4); font-weight: 600;">{{ student.name }}</td>
                            <td style="padding: var(--sp-4);">{{ student.class }}</td>
                            <td style="padding: var(--sp-4); color: var(--text-secondary);">{{ student.email }}</td>
                            <td style="padding: var(--sp-4);">
                                <span class="badge {{ student.status == 'Actif' ? 'badge-success' : 'badge-warning' }}">{{ student.status }}</span>
                            </td>
                            <td style="padding: var(--sp-4); text-align: right;">
                                <a href="{{ path('app_student_show', {id: student.id}) }}" class="btn btn-outline" style="padding: 4px 8px; font-size: 0.875rem;">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn btn-outline" style="padding: 4px 8px; font-size: 0.875rem; color: var(--primary-color);">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination UI -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: var(--sp-6); color: var(--text-secondary); font-size: 0.875rem;">
            <span>Affichage de 1 à 5 sur 24 élèves</span>
            <div style="display: flex; gap: 4px;">
                <button class="btn btn-outline" style="padding: 4px 10px;">1</button>
                <button class="btn btn-outline" style="padding: 4px 10px; background: var(--secondary-color); color: white; border-color: var(--secondary-color);">2</button>
                <button class="btn btn-outline" style="padding: 4px 10px;">3</button>
                <span>...</span>
                <button class="btn btn-outline" style="padding: 4px 10px;">5</button>
            </div>
        </div>
    </div>
{% endblock %}
