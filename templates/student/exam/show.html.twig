{% extends 'student_layout.html.twig' %}

{% block title %}Examen - EduSmart{% endblock %}

{% block body %}
<div class="exam-container" style="background: white; border-radius: 30px; padding: 40px; box-shadow: var(--shadow-md);">
    <div style="display: grid; grid-template-columns: 240px 1fr; gap: 40px;">
        <!-- Sidebar Navigation -->
        <aside style="border-right: 1px solid #F1F5F9; padding-right: 30px;">
            <h4 style="font-size: 0.9rem; font-weight: 800; color: #94A3B8; text-transform: uppercase; margin-bottom: 20px;">Chapitres</h4>
            <div style="display: flex; flex-direction: column; gap: 10px;">
                <div class="exam-chapter-item">Algèbre</div>
                <div class="exam-chapter-item">Systèmes d'Équations</div>
                <div class="exam-chapter-item active" style="background: #6366F1; color: white; padding: 12px; border-radius: 12px; font-weight: 600;">Matrices</div>
            </div>
        </aside>

        <!-- Question Content -->
        <main>
            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 40px;">
                <div>
                    <h2 style="font-size: 1.5rem; font-weight: 800; color: #1E293B;">Mathématiques : Contrôle Final</h2>
                    <p style="color: #64748B; margin-top: 5px;">Sujet : Matrices et Déterminants</p>
                </div>
                <div style="background: #F8FAFC; padding: 12px 20px; border-radius: 15px; border: 1px solid #E2E8F0; font-weight: 800; font-size: 1.2rem; color: #3B49A2;">
                    <i class="far fa-clock"></i> 23:45
                </div>
            </div>

            <div style="margin-bottom: 40px;">
                <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                    <span style="font-weight: 700; color: #1E293B;">Question 2 sur 10</span>
                    <span style="color: #64748B; font-size: 0.9rem;">20% complété</span>
                </div>
                <div style="height: 6px; background: #F1F5F9; border-radius: 3px; overflow: hidden;">
                    <div style="width: 20%; height: 100%; background: #6366F1;"></div>
                </div>
            </div>

            <div id="question-box" style="margin-bottom: 40px;">
                <p style="font-size: 1.2rem; font-weight: 700; color: #1E293B; margin-bottom: 30px;">Quel est le déterminant de la matrice suivante ?</p>
                
                <div style="display: flex; justify-content: center; margin-bottom: 40px;">
                    <div style="font-size: 1.8rem; border-left: 3px solid #1E293B; border-right: 3px solid #1E293B; padding: 20px 30px; font-family: 'Courier New', monospace; font-weight: 700;">
                        <div>-2 &nbsp; 0</div>
                        <div>5 &nbsp; 1</div>
                    </div>
                </div>

                <div style="display: flex; flex-direction: column; gap: 15px;">
                    <label class="option-item" style="display: flex; align-items: center; gap: 15px; padding: 20px; border: 1px solid #E2E8F0; border-radius: 15px; cursor: pointer; transition: 0.2s;">
                        <input type="radio" name="q2" value="-6" style="width: 20px; height: 20px;">
                        <span style="font-weight: 600;">-6</span>
                    </label>
                    <label class="option-item" style="display: flex; align-items: center; gap: 15px; padding: 20px; border: 2px solid #6366F1; background: #EEF2FF; border-radius: 15px; cursor: pointer;">
                        <input type="radio" name="q2" value="-10" checked style="width: 20px; height: 20px;">
                        <span style="font-weight: 600; color: #3B49A2;">-10</span>
                    </label>
                    <label class="option-item" style="display: flex; align-items: center; gap: 15px; padding: 20px; border: 1px solid #E2E8F0; border-radius: 15px; cursor: pointer;">
                        <input type="radio" name="q2" value="5" style="width: 20px; height: 20px;">
                        <span style="font-weight: 600;">5</span>
                    </label>
                </div>
            </div>

            <div style="display: flex; justify-content: space-between; align-items: center; border-top: 1px solid #F1F5F9; padding-top: 30px;">
                <div style="display: flex; gap: 10px;">
                    {% for i in 1..7 %}
                        <div style="width: 40px; height: 40px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-weight: 700; cursor: pointer; {{ i == 2 ? 'background: #3B49A2; color: white;' : 'background: #F8FAFC; color: #64748B; border: 1px solid #E2E8F0;' }}">
                            {{ i }}
                        </div>
                    {% endfor %}
                </div>
                <div style="display: flex; gap: 15px;">
                    <button class="btn btn-outline" style="padding: 12px 25px; border-radius: 12px;">Précédent</button>
                    <button class="btn btn-primary" style="padding: 12px 25px; border-radius: 12px; background: #3B49A2;">Suivant</button>
                    <button class="btn btn-primary" style="padding: 12px 25px; border-radius: 12px; background: #BE185D;">Terminer l'Examen</button>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
