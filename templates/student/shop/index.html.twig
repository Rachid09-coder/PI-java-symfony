{% extends 'student_layout.html.twig' %}

{% block title %}Boutique - EduSmart{% endblock %}

{% block body %}
<div style="margin-bottom: 40px;">
    <h2 style="font-size: 1.8rem; font-weight: 800; color: #1E293B; margin-bottom: 10px;">Boutique Éducative</h2>
    <p style="color: #64748B;">Équipez-vous pour réussir vos études avec notre sélection de produits.</p>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 30px;">
    {% for product in products %}
        <div class="card" style="display: flex; flex-direction: column; transition: 0.3s; border: 1px solid #F1F5F9; background: white; padding: 15px; border-radius: 20px; position: relative;" 
             onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 10px 25px -5px rgba(0, 0, 0, 0.1)'" 
             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
            
            {# Section Image #}
            <div style="height: 200px; background: #F8FAFC; border-radius: 15px; margin-bottom: 20px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                {% if product.image %}
                    {# Vérifie si c'est un lien HTTP ou un fichier local #}
                    {% set imagePath = (product.image starts with 'http') ? product.image : asset('uploads/products/' ~ product.image) %}
                    <img src="{{ imagePath }}" 
                         alt="{{ product.name }}" 
                         style="width: 100%; height: 100%; object-fit: cover;"
                         onerror="this.onerror=null; this.src='https://placehold.co/600x400?text=Image+Non+Trouvée';">
                {% else %}
                    <div style="text-align: center; color: #CBD5E1;">
                        <i class="fas fa-box-open" style="font-size: 3.5rem;"></i>
                        <p style="font-size: 0.8rem; margin-top: 5px;">Pas d'image</p>
                    </div>
                {% endif %}
            </div>

            {# Infos #}
            <div style="flex-grow: 1;">
                <h4 style="font-size: 1.1rem; font-weight: 700; margin-bottom: 8px; color: #1E293B;">{{ product.name }}</h4>
                
                {% if product.category %}
                    <span style="display: inline-block; background: #EEF2FF; color: #6366F1; padding: 4px 10px; border-radius: 8px; font-size: 0.75rem; font-weight: 600; margin-bottom: 10px;">
                        {{ product.category.name is defined ? product.category.name : product.category }}
                    </span>
                {% endif %}

                <p style="font-weight: 800; color: #3B49A2; font-size: 1.4rem; margin-bottom: 20px;">
                    {{ product.price|number_format(2, ',', ' ') }} €
                </p>
            </div>
            
            <button class="btn btn-primary add-to-cart" 
                    data-id="{{ product.id }}" 
                    data-name="{{ product.name }}" 
                    data-price="{{ product.price }}"
                    style="width: 100%; padding: 12px; border-radius: 12px; background: #3B49A2; border: none; color: white; font-weight: 600; cursor: pointer;">
                <i class="fas fa-cart-plus"></i> Ajouter au panier
            </button>
        </div>
    {% else %}
        <p>Aucun produit en base.</p>
    {% endfor %}
</div>
{% endblock %}