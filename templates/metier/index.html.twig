{% extends 'admin_layout.html.twig' %}

{% block title %}Gestion des Métiers - EduSmart{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="h3 mb-1">Gestion des Métiers</h1>
        <p class="text-muted small mb-0">Définissez et gérez les filières professionnelles.</p>
    </div>
    <a href="{{ path('app_metier_new') }}" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow">
        <i class="fas fa-plus-circle fs-5"></i>
        <span class="fw-bold">Nouveau Métier</span>
    </a>
</div>

<div class="card shadow border-0 overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-list me-2"></i>Répertoire des Métiers</h6>
        <span class="badge bg-primary-soft text-primary px-3">{{ metiers|length }} total</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">Aperçu</th>
                        <th class="py-3 text-uppercase small fw-bold text-muted">Nom du Métier</th>
                        <th class="py-3 text-uppercase small fw-bold text-muted">Description</th>
                        <th class="pe-4 py-3 text-uppercase small fw-bold text-muted text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for metier in metiers %}
                        <tr>
                            <td class="ps-4">
                                <div class="bg-primary-soft text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                            </td>
                            <td class="fw-bold text-dark">{{ metier.nom }}</td>
                            <td class="text-muted small">
                                {{ metier.description|length > 80 ? metier.description|slice(0, 80) ~ '...' : metier.description }}
                            </td>
                            <td class="pe-4 text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="{{ path('app_metier_show', {id: metier.id}) }}" class="btn btn-sm btn-light-soft text-primary shadow-sm" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_metier_edit', {id: metier.id}) }}" class="btn btn-sm btn-light-soft text-warning shadow-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <div class="d-inline-block">
                                        {{ include('metier/_delete_form.html.twig', {metier: metier}) }}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted mb-3"><i class="fas fa-folder-open fa-3x"></i></div>
                                <p class="mb-0">Aucun métier n’a encore été créé.</p>
                                <a href="{{ path('app_metier_new') }}" class="btn btn-primary mt-3">Commençer maintenant</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .bg-primary-soft { background-color: #eef2ff !important; color: #4f46e5 !important; }
    .btn-light-soft { background-color: #f8fafc; color: #64748b; border: 1px solid #e2e8f0; }
    .btn-light-soft:hover { background-color: #f1f5f9; color: #334155; }
</style>
{% endblock %}
