{% extends 'base.html.twig' %}

{% block title %}Métier{% endblock %}

{% block header_content %}
    <div class="page-header">
        <h1>Détails du métier</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ metier.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ metier.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ metier.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_metier_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
                <a href="{{ path('app_metier_edit', {'id': metier.id}) }}" class="btn btn-primary">Modifier</a>
                {{ include('metier/_delete_form.html.twig', {metier: metier}) }}
            </div>
        </div>
    </div>
{% endblock %}
