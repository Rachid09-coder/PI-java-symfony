<div class="admin-card">
    <div class="admin-card-body">
        {{ form_start(form, { attr: { class: 'admin-form' } }) }}

        <div class="admin-form-grid">
            {{ form_row(form.student) }}
            {{ form_row(form.academicYear) }}
            {{ form_row(form.semester) }}
            {{ form_row(form.average) }}
            {{ form_row(form.status) }}
            {{ form_row(form.createdAt) }}
            {{ form_row(form.updatedAt) }}
        </div>

        <div class="admin-form-actions">
            <a href="{{ path('admin_bulletin_index') }}" class="btn-secondary">
                ← Retour à la liste
            </a>
            <button class="btn-primary">
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>