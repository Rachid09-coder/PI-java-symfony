{% extends 'base.html.twig' %}

{% block title %}Gestion des bulletins{% endblock %}

{% block header_content %}
    <div class="page-header">
        <h1>Gestion des bulletins</h1>
        <p class="text-muted">Consultez et gérez les bulletins académiques des étudiants.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="card-title mb-0">Liste des bulletins</h2>
                    <small class="text-muted">Bulletins générés à partir des évaluations</small>
                </div>
                <a href="{{ path('admin_bulletin_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nouveau bulletin
                </a>
            </div>

            <div class="card-body">
                {% if bulletins is empty %}
                    <p class="text-muted mb-0">Aucun bulletin n’a encore été créé.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Étudiant</th>
                                    <th>Année</th>
                                    <th>Semestre</th>
                                    <th>Moyenne</th>
                                    <th>Statut</th>
                                    <th>Créé le</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for bulletin in bulletins %}
                                    <tr>
                                        <td>#{{ bulletin.id }}</td>
                                        <td>{{ bulletin.student ? bulletin.student.email : '—' }}</td>
                                        <td>{{ bulletin.academicYear }}</td>
                                        <td>{{ bulletin.semester }}</td>
                                        <td>
                                            {{ bulletin.average is not null
                                                ? bulletin.average|number_format(2, ',', ' ')
                                                : '—' }}
                                        </td>
                                        <td>
                                            {% set s = bulletin.status %}
                                            {% if s == 'DRAFT' %}
                                                <span class="badge bg-secondary">Brouillon</span>
                                            {% elseif s == 'VALIDATED' %}
                                                <span class="badge bg-success">Validé</span>
                                            {% else %}
                                                <span class="badge bg-light text-dark">{{ s }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ bulletin.createdAt
                                                ? bulletin.createdAt|date('d/m/Y H:i')
                                                : '' }}
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('admin_bulletin_show', {id: bulletin.id}) }}"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_bulletin_edit', {id: bulletin.id}) }}"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            {{ include('bulletin/_delete_form.html.twig', { bulletin: bulletin }) }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
