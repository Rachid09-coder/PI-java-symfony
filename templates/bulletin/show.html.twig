{% extends 'base.html.twig' %}

{% block title %}Détail du bulletin #{{ bulletin.id }}{% endblock %}

{% block header_content %}
    <div class="page-header">
        <h1>Bulletin #{{ bulletin.id }}</h1>
        <p class="text-muted">Vue détaillée du bulletin.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Étudiant</dt>
                    <dd class="col-sm-9">{{ bulletin.student ? bulletin.student.email : '—' }}</dd>

                    <dt class="col-sm-3">Année académique</dt>
                    <dd class="col-sm-9">{{ bulletin.academicYear }}</dd>

                    <dt class="col-sm-3">Semestre</dt>
                    <dd class="col-sm-9">{{ bulletin.semester }}</dd>

                    <dt class="col-sm-3">Moyenne</dt>
                    <dd class="col-sm-9">
                        {{ bulletin.average is not null ? bulletin.average|number_format(2, ',', ' ') : '—' }}
                    </dd>

                    <dt class="col-sm-3">Statut</dt>
                    <dd class="col-sm-9">{{ bulletin.status }}</dd>

                    <dt class="col-sm-3">Créé le</dt>
                    <dd class="col-sm-9">
                        {{ bulletin.createdAt ? bulletin.createdAt|date('d/m/Y H:i') : '' }}
                    </dd>

                    <dt class="col-sm-3">Mis à jour le</dt>
                    <dd class="col-sm-9">
                        {{ bulletin.updatedAt ? bulletin.updatedAt|date('d/m/Y H:i') : '—' }}
                    </dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_bulletin_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour
                </a>
                <div>
                    <a href="{{ path('app_bulletin_edit', {id: bulletin.id}) }}" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-1"></i> Modifier
                    </a>
                    {{ include('bulletin/_delete_form.html.twig', {bulletin: bulletin}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}