{% extends 'admin_layout.html.twig' %}

{% block title %}Nouveau Bulletin - EduSmart{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('admin_bulletin_index') }}" class="btn btn-link p-0 text-decoration-none">
        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
    </a>
    <h1 class="h3 mt-2">Créer un nouveau bulletin</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0 overflow-hidden">
            <div class="card-header bg-primary py-3">
                <h6 class="m-0 font-weight-bold text-white">Informations Académiques</h6>
            </div>
            <div class="card-body p-4">
                {{ include('admin/bulletin/_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}