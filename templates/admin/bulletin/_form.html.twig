{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.student) }}
            {{ form_widget(form.student, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.student) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.academicYear) }}
            {{ form_widget(form.academicYear, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 2023-2024'}}) }}
            {{ form_errors(form.academicYear) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.semester) }}
            {{ form_widget(form.semester, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.semester) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.average) }}
            {{ form_widget(form.average, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
            {{ form_errors(form.average) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.status) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.status) }}
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow">
            <i class="fas fa-check-circle fs-5"></i>
            <span class="fw-bold">{{ button_label|default('Créer le Bulletin académique') }}</span>
        </button>
    </div>
{{ form_end(form) }}