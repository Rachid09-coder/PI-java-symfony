{# templates/admin/_edusmart_styles.html.twig #}
<style>
    .admin-page {
        padding: 24px 32px;
    }

    .admin-page-header {
        margin-bottom: 18px;
    }

    .admin-page-header h1 {
        font-size: 1.6rem;
        margin-bottom: 4px;
    }

    .admin-page-header .text-muted {
        font-size: 0.9rem;
        color: #6b7280;
    }

    .admin-actions-inline {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-bottom: 12px;
    }

    .admin-card {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.08);
        padding: 18px 22px;
        margin-top: 12px;
        max-width: 1100px;
    }

    .admin-card-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .admin-card-title {
        font-size: 1.1rem;
        margin: 0;
    }

    .admin-card-subtitle {
        margin: 3px 0 0;
        font-size: 0.85rem;
        color: #6b7280;
    }

    /* -------- FORMULAIRES -------- */

    .admin-card-body {
        width: 100%;
    }

    .admin-form {
        display: block;
    }

    .admin-form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 16px 24px;
    }

    .admin-form-grid > div {
        display: flex;
        flex-direction: column;
    }

    .admin-form label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #475569;
        margin-bottom: 4px;
    }

    .admin-form input,
    .admin-form select,
    .admin-form textarea {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        padding: 8px 10px;
        font-size: 0.9rem;
        outline: none;
        width: 100%;
        box-sizing: border-box;
    }

    .admin-form input:focus,
    .admin-form select:focus,
    .admin-form textarea:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 1px rgba(79, 70, 229, 0.3);
    }

    .admin-form .form-error-message {
        color: #dc2626;
        font-size: 0.78rem;
        margin-top: 2px;
    }

    .admin-form .is-invalid {
        border-color: #dc2626 !important;
        box-shadow: 0 0 0 1px rgba(220, 38, 38, 0.2);
    }

    .admin-form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 24px;
    }

    .alert-error {
        background: #fee2e2;
        color: #b91c1c;
        border-radius: 10px;
        padding: 10px 12px;
        font-size: 0.85rem;
        margin-bottom: 12px;
    }

    /* -------- TABLEAUX -------- */

    .admin-table-wrapper {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
    }

    .admin-table th,
    .admin-table td {
        padding: 8px 10px;
        border-bottom: 1px solid #e5e7eb;
        text-align: left;
        white-space: nowrap;
    }

    .admin-table th {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        color: #6b7280;
    }

    .admin-table tr:hover {
        background: #f9fafb;
    }

    .admin-empty {
        padding: 12px 0;
        font-size: 0.88rem;
        color: #9ca3af;
        text-align: center;
    }

    /* Mise en forme sp√©cifique du tableau des bulletins */
    .admin-table-bulletin th:nth-child(1),
    .admin-table-bulletin td:nth-child(1) {
        width: 40px;
        text-align: center;
    }

    .admin-table-bulletin th:nth-child(2),
    .admin-table-bulletin td:nth-child(2) {
        min-width: 220px;
        font-weight: 500;
    }

    .admin-table-bulletin th:nth-child(3),
    .admin-table-bulletin td:nth-child(3),
    .admin-table-bulletin th:nth-child(4),
    .admin-table-bulletin td:nth-child(4),
    .admin-table-bulletin th:nth-child(5),
    .admin-table-bulletin td:nth-child(5) {
        white-space: nowrap;
    }

    .admin-table-bulletin th:nth-child(7),
    .admin-table-bulletin td:nth-child(7) {
        white-space: nowrap;
    }

    /* -------- BADGES & BOUTONS -------- */

    .badge-soft {
        display: inline-flex;
        align-items: center;
        padding: 2px 8px;
        border-radius: 999px;
        font-size: 0.75rem;
    }
    .badge-soft.badge-gray { background: #f3f4f6; color: #4b5563; }
    .badge-soft.badge-green { background: #dcfce7; color: #166534; }
    .badge-soft.badge-blue  { background: #e0f2fe; color: #1d4ed8; }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 18px;
        border-radius: 999px;
        background: linear-gradient(90deg, #4f46e5, #6366f1);
        color: #fff;
        font-size: 0.9rem;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px 16px;
        border-radius: 999px;
        background: transparent;
        border: 1px solid #d1d5db;
        color: #374151;
        font-size: 0.9rem;
        text-decoration: none;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: 999px;
        background: #f3f4ff;
        color: #4f46e5;
        font-size: 0.8rem;
        text-decoration: none;
        margin-left: 4px;
    }

    .text-end {
        text-align: right;
    }
</style>