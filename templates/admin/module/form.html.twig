{% extends 'admin_layout.html.twig' %}

{% block title %}{{ module.id ? 'Modifier' : 'Ajouter' }} Module - EduSmart{% endblock %}

{% block body %}
{% set back_course = course ?? (module.courses|length > 0 ? module.courses|first : null) %}
<div style="max-width: 800px; margin: 0 auto;">
    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 30px;">
        <a href="{{ back_course ? path('admin_course_modules', {id: back_course.id}) : path('admin_modules_manage') }}" style="color: #64748B;"><i class="fas fa-arrow-left"></i></a>
        <h2 style="font-size: 1.5rem; font-weight: 800;">{{ module.id ? 'Modifier le Module' : 'Ajouter un Nouveau Module' }}</h2>
    </div>

    <div class="card" style="padding: 40px;">
        {{ form_start(form) }}
        <div style="display: flex; flex-direction: column; gap: 25px;">
            <div>
                {{ form_row(form.title) }}
            </div>
            <div>
                {{ form_row(form.description) }}
            </div>
            <div>
                {{ form_row(form.thumbnail) }}
            </div>
        </div>

        <div style="border-top: 1px solid #F1F5F9; padding-top: 30px; display: flex; justify-content: flex-end; gap: 15px; margin-top: 20px;">
            <a href="{{ back_course ? path('admin_course_modules', {id: back_course.id}) : path('admin_modules_manage') }}" class="btn btn-outline" style="padding: 12px 30px;">Annuler</a>
            <button type="submit" class="btn btn-primary" style="padding: 12px 40px; background: #3B49A2;">Enregistrer le Module</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
