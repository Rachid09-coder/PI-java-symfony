{% extends 'admin_layout.html.twig' %}

{% block title %}Gérer les Cours - Professeur{% endblock %}

{% block body %}
<div class="card" style="padding: 30px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h3 style="font-size: 1.5rem; font-weight: 800; color: #1E293B;">Administration des Cours</h3>
        <a href="{{ path('admin_course_new') }}" class="btn btn-primary" style="background: #3B49A2; padding: 12px 25px; border-radius: 12px;">+ Nouveau Cours</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" style="margin-bottom: 20px; padding: 12px 20px; background: #D1FAE5; color: #065F46; border-radius: 8px;">{{ message }}</div>
    {% endfor %}

    {# Search Bar #}
    <div style="margin-bottom: 25px; display: flex; gap: 15px; align-items: center;">
        <div style="position: relative; flex: 1;">
            <i class="fas fa-search" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: #94A3B8; transition: color 0.3s ease;"></i>
            <input type="text" id="searchInput" placeholder="Rechercher un cours par titre..." style="width: 100%; padding: 14px 14px 14px 45px; border: 1px solid var(--border-color); border-radius: 12px; outline: none; background: var(--bg-secondary); color: var(--text-primary); transition: all 0.3s ease;" onkeyup="filterTable()" onfocus="this.style.borderColor='#3B49A2'; this.style.boxShadow='0 0 0 3px rgba(59,73,162,0.1)'; this.previousElementSibling.style.color='#3B49A2'" onblur="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none'; this.previousElementSibling.style.color='#94A3B8'">
        </div>
        <select id="sortCriteria" style="padding: 14px 16px; border: 1px solid var(--border-color); border-radius: 12px; background: var(--bg-secondary); color: var(--text-primary); cursor: pointer; font-weight: 600; outline: none; transition: all 0.3s ease;" onmouseover="this.style.borderColor='#3B49A2'; this.style.boxShadow='0 2px 8px rgba(59,73,162,0.15)'" onmouseout="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none'" onfocus="this.style.borderColor='#3B49A2'; this.style.boxShadow='0 0 0 3px rgba(59,73,162,0.1)'" onblur="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none'">
            <option value="title">Trier par Titre</option>
            <option value="price">Trier par Prix</option>
        </select>
        <button onclick="sortTable()" id="sortBtn" style="padding: 14px 20px; border: 1px solid var(--border-color); border-radius: 12px; background: var(--bg-secondary); color: var(--text-primary); cursor: pointer; display: flex; align-items: center; gap: 8px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.background='#3B49A2'; this.style.color='white'; this.style.borderColor='#3B49A2'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 12px rgba(59,73,162,0.3)'" onmouseout="this.style.background='var(--bg-secondary)'; this.style.color='var(--text-primary)'; this.style.borderColor='var(--border-color)'; this.style.transform='translateY(0)'; this.style.boxShadow='none'">
            <i class="fas fa-sort-amount-down" id="sortIcon"></i>
            <span id="sortLabel">Croissant</span>
        </button>
    </div>

    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="text-align: left; border-bottom: 2px solid #F1F5F9; color: #64748B; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px;">
                    <th style="padding: 20px;">Image</th>
                    <th style="padding: 20px;">Titre du Cours</th>
                    <th style="padding: 20px;">Modules</th>
                    <th style="padding: 20px;">Prix</th>
                    <th style="padding: 20px;">Statut</th>
                    <th style="padding: 20px; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for course in courses %}
                <tr style="border-bottom: 1px solid #F8FAFC; transition: all 0.3s ease;" onmouseover="this.style.background='#F8FAFC'; this.style.transform='scale(1.01)'; this.style.boxShadow='0 2px 8px rgba(0,0,0,0.08)';" onmouseout="this.style.background='transparent'; this.style.transform='scale(1)'; this.style.boxShadow='none';">
                    <td style="padding: 20px;">
                        {% if course.thumbnailPath %}
                            <img src="{{ asset('uploads/' ~ course.thumbnailPath) }}" alt="{{ course.title }}" style="width: 60px; height: 40px; object-fit: cover; border-radius: 6px; transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
                        {% else %}
                            <div style="width: 60px; height: 40px; background: #F1F5F9; border-radius: 6px; display: flex; align-items: center; justify-content: center; color: #94A3B8; font-size: 0.8rem;">
                                <i class="fas fa-image"></i>
                            </div>
                        {% endif %}
                    </td>
                    <td style="padding: 20px;">
                        <div style="font-weight: 700; color: #1E293B; transition: color 0.3s ease;" onmouseover="this.style.color='#3B49A2'" onmouseout="this.style.color='#1E293B'">{{ course.title }}</div>
                        <div style="font-size: 0.8rem; color: #94A3B8;">Créé le {{ course.createdAt|date('d M Y') }}</div>
                    </td>
                    <td style="padding: 20px; font-weight: 600; color: #64748B;">
                        {% if course.modules|length > 0 %}
                            {% for module in course.modules %}
                                <span style="display: inline-block; background: #EEF2FF; color: #6366F1; padding: 2px 8px; border-radius: 12px; font-size: 0.75rem; margin-bottom: 2px; transition: all 0.3s ease; cursor: pointer;" onmouseover="this.style.background='#6366F1'; this.style.color='white'; this.style.transform='translateY(-2px)'" onmouseout="this.style.background='#EEF2FF'; this.style.color='#6366F1'; this.style.transform='translateY(0)'">{{ module.title }}</span>
                            {% endfor %}
                        {% else %}
                            <span style="color: #94A3B8;">Aucun module</span>
                        {% endif %}
                    </td>
                    <td style="padding: 20px; font-weight: 700; color: #3B49A2;">{{ course.price|number_format(2, ',', ' ') }} €</td>
                    <td style="padding: 20px;">
                        <span style="background: {{ course.status == 'PUBLISHED' ? '#D1FAE5' : '#FEF3C7' }}; color: {{ course.status == 'PUBLISHED' ? '#10B981' : '#D97706' }}; padding: 5px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 700; transition: all 0.3s ease; cursor: default;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 2px 6px rgba(0,0,0,0.1)'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none'">{{ course.status == 'PUBLISHED' ? 'Publié' : 'Brouillon' }}</span>
                    </td>
                    <td style="padding: 20px; text-align: right;">
                        <div style="display: flex; gap: 10px; justify-content: flex-end;">
                            <a href="{{ path('admin_course_edit', {id: course.id}) }}" class="btn btn-outline" style="padding: 8px 12px; border-radius: 8px; color: #64748B; border: 1px solid #E2E8F0; text-decoration: none; transition: all 0.3s ease; display: inline-flex; align-items: center; justify-content: center;" onmouseover="this.style.background='#3B49A2'; this.style.color='white'; this.style.borderColor='#3B49A2'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 8px rgba(59,73,162,0.3)'" onmouseout="this.style.background='transparent'; this.style.color='#64748B'; this.style.borderColor='#E2E8F0'; this.style.transform='translateY(0)'; this.style.boxShadow='none'"><i class="fas fa-edit"></i></a>
                            <form method="post" action="{{ path('admin_course_delete', {id: course.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ce cours et ses modules ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                                <button type="submit" class="btn btn-outline" style="padding: 8px 12px; border-radius: 8px; color: #EF4444; border: 1px solid #E2E8F0; background: transparent; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.background='#EF4444'; this.style.color='white'; this.style.borderColor='#EF4444'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 8px rgba(239,68,68,0.3)'" onmouseout="this.style.background='transparent'; this.style.color='#EF4444'; this.style.borderColor='#E2E8F0'; this.style.transform='translateY(0)'; this.style.boxShadow='none'"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" style="padding: 40px; text-align: center; color: #64748B;">Aucun cours. <a href="{{ path('admin_course_new') }}" style="color: #3B49A2; text-decoration: none; font-weight: 600; transition: color 0.3s ease;" onmouseover="this.style.color='#6366F1'" onmouseout="this.style.color='#3B49A2'">Créer un cours</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
function filterTable() {
    const input = document.getElementById('searchInput');
    const filter = input.value.toLowerCase();
    const table = document.querySelector('table tbody');
    const rows = table.getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const titleCell = rows[i].getElementsByTagName('td')[1];
        if (titleCell) {
            // Get only the first div (title), not the date
            const titleDiv = titleCell.querySelector('div');
            const titleText = titleDiv ? titleDiv.textContent : titleCell.textContent;
            if (titleText.toLowerCase().indexOf(filter) > -1) {
                rows[i].style.display = '';
            } else {
                rows[i].style.display = 'none';
            }
        }
    }
}


let sortAscending = true;
function sortTable() {
    const table = document.querySelector('table tbody');
    const rows = Array.from(table.getElementsByTagName('tr'));
    const sortBtn = document.getElementById('sortBtn');
    const sortIcon = document.getElementById('sortIcon');
    const sortLabel = document.getElementById('sortLabel');
    const sortCriteria = document.getElementById('sortCriteria').value;
    
    rows.sort((a, b) => {
        let aValue, bValue;
        
        if (sortCriteria === 'title') {
            // Sort by title (column index 1)
            const aTitleCell = a.getElementsByTagName('td')[1];
            const bTitleCell = b.getElementsByTagName('td')[1];
            const aDiv = aTitleCell?.querySelector('div');
            const bDiv = bTitleCell?.querySelector('div');
            aValue = aDiv ? aDiv.textContent.trim() : '';
            bValue = bDiv ? bDiv.textContent.trim() : '';
            
            if (sortAscending) {
                return aValue.localeCompare(bValue, 'fr', { sensitivity: 'base' });
            } else {
                return bValue.localeCompare(aValue, 'fr', { sensitivity: 'base' });
            }
        } else if (sortCriteria === 'price') {
            // Sort by price (column index 3)
            const aPriceCell = a.getElementsByTagName('td')[3];
            const bPriceCell = b.getElementsByTagName('td')[3];
            const aPriceText = aPriceCell?.textContent.trim() || '0';
            const bPriceText = bPriceCell?.textContent.trim() || '0';
            
            // Extract numeric value from "XX.XX €"
            aValue = parseFloat(aPriceText.replace(/[^\d.,]/g, '').replace(',', '.')) || 0;
            bValue = parseFloat(bPriceText.replace(/[^\d.,]/g, '').replace(',', '.')) || 0;
            
            if (sortAscending) {
                return aValue - bValue;
            } else {
                return bValue - aValue;
            }
        }
    });
    
    rows.forEach(row => table.appendChild(row));
    
    sortAscending = !sortAscending;
    if (sortAscending) {
        sortIcon.className = 'fas fa-sort-amount-down';
        sortLabel.textContent = 'Croissant';
    } else {
        sortIcon.className = 'fas fa-sort-amount-up';
        sortLabel.textContent = 'Décroissant';
    }
}
</script>
{% endblock %}
