{% extends 'admin_layout.html.twig' %}

{% block title %}Ajouter une Signature/Cachet - EduSmart{% endblock %}

{% block body %}
<div class="container py-5">

    <div class="mb-5">
        <a href="{{ path('admin_signature_asset_index') }}" 
           class="btn btn-link text-decoration-none mb-3">
            <i class="fas fa-arrow-left me-2"></i> Retour à la galerie
        </a>

        <h1 class="h3 fw-bold">Nouvel Éclat Officiel</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary py-3 rounded-top-4">
                    <h6 class="m-0 fw-bold text-white">
                        Détails de l'Éclat Officiel
                    </h6>
                </div>

                <div class="card-body p-5">

                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_label(form.label, 'Nom de l\'élément') }}
                        {{ form_widget(form.label, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: Signature du Directeur'
                            }
                        }) }}
                        {{ form_errors(form.label) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.type, 'Type d\'élément') }}
                        {{ form_widget(form.type, {
                            'attr': {'class': 'form-select'}
                        }) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="mb-5 bg-light p-4 rounded border">
                        {{ form_label(form.imageFile, 'Fichier Image') }}
                        {{ form_widget(form.imageFile, {
                            'attr': {'class': 'form-control'}
                        }) }}

                        <div class="form-text small text-muted mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            PNG recommandé (fond transparent). Max 2Mo.
                        </div>

                        {{ form_errors(form.imageFile) }}
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit"
                                class="btn btn-primary px-5 py-2 shadow-sm">
                            <i class="fas fa-upload me-2"></i>
                            <span class="fw-bold">Téléverser</span>
                        </button>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

            <div class="alert alert-info mt-5 shadow-sm border-0 rounded-3">
                <h6 class="fw-bold mb-2">
                    <i class="fas fa-lightbulb me-2"></i>
                    Conseil d'Expert
                </h6>
                <p class="small mb-0">
                    Utilisez un PNG transparent pour un rendu professionnel
                    dans les PDF.
                </p>
            </div>

        </div>
    </div>
</div>
{% endblock %}
