{% extends 'admin_layout.html.twig' %}

{% block title %}{{ id is defined and id ? 'Modifier' : 'Générer' }} Certificat - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 0 auto;">
    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 30px;">
        <a href="{{ path('admin_certification_index') }}" style="color: #64748B;"><i class="fas fa-arrow-left"></i></a>
        <h2 style="font-size: 1.5rem; font-weight: 800;">{{ id is defined and id ? 'Modifier le Certificat' : 'Délivrer un Nouveau Certificat' }}</h2>
    </div>

    <div class="card" style="padding: 40px; position: relative; overflow: hidden;">
        <div style="position: absolute; top: -20px; right: -20px; opacity: 0.05;">
            <i class="fas fa-certificate" style="font-size: 15rem; color: #3B49A2;"></i>
        </div>

        <form action="{{ path('admin_certification_index') }}" method="GET">
            <div style="display: flex; flex-direction: column; gap: 25px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Élève Bénéficiaire</label>
                        <select style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; background: white;">
                            <option>Alice Martin</option>
                            <option>Bob Durand</option>
                        </select>
                    </div>
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Formation Validée</label>
                        <select style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; background: white;">
                            <option>Masterclass Symfony 6</option>
                            <option>Expertise Intelligence Artificielle</option>
                        </select>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Date d'obtention</label>
                        <input type="date" value="2026-02-03" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none;">
                    </div>
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Mention</label>
                        <select style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; background: white;">
                            <option>Très Bien</option>
                            <option>Bien</option>
                            <option>Assez Bien</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px;">ID Certificat (Généré automatiquement)</label>
                    <input type="text" value="CERT-2026-{{ id ?? 'XXXX' }}" readonly style="width: 100%; padding: 14px; border: 1px solid #F1F5F9; border-radius: 12px; background: #F8FAFC; color: #94A3B8; font-family: monospace;">
                </div>
            </div>

            <div style="border-top: 1px solid #F1F5F9; padding-top: 30px; display: flex; justify-content: flex-end; gap: 15px; margin-top: 20px;">
                <button type="button" class="btn btn-outline" style="padding: 12px 30px;">Aperçu du Certificat</button>
                <button type="submit" class="btn btn-primary" style="padding: 12px 40px; background: #3B49A2;">Délivrer le Certificat</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
