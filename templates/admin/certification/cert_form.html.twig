{% extends 'admin_layout.html.twig' %}

{% block title %}{{ certification.id ? 'Mise à jour' : 'Émission' }} Certification - EduSmart{% endblock %}

{% block body %}
<div class="admin-page animate-fade-in py-4">
    {# Orbes décoratives pour la touche futuriste #}
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>

    <div class="container-fluid position-relative z-index-2">
        <header class="mb-5">
            <a href="{{ path('admin_certification_index') }}" class="btn-back-premium mb-3">
                <i class="fas fa-arrow-left me-2"></i> Retour au Registre
            </a>
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div>
                    <h1 class="h2 fw-900 text-dark mb-1">{{ certification.id ? 'Actualisation de Titre' : 'Délivrance de Certification' }}</h1>
                    <p class="text-muted small mb-0">Émettez des titres académiques sécurisés et signés via protocole HMAC.</p>
                </div>
                <div class="badge-premium-logic">
                    <i class="fas fa-shield-check me-2"></i> Protocole HMAC-SHA256 Actif
                </div>
            </div>
        </header>

        {{ form_start(form, {'attr': {'class': 'premium-form'}}) }}
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card card-premium-glass shadow-lg border-0 overflow-hidden" style="border-radius: 28px;">
                    <div class="card-header bg-transparent border-bottom border-light py-4 px-4 p-md-5 pb-md-0 border-0">
                        <div class="d-flex align-items-center">
                            <div class="icon-pulse me-3">
                                <i class="fas fa-scroll fa-2x text-primary-gradient"></i>
                            </div>
                            <div>
                                <h4 class="fw-800 text-dark mb-0">Fiche de Certification</h4>
                                <p class="text-muted small mb-0">Renseignez les métadonnées pour générer le titre officiel.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-4 p-md-5">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.student, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.student, {'attr': {'class': 'form-select-premium select-lg-premium'}}) }}
                                    </div>
                                    {{ form_errors(form.student) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.bulletin, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.bulletin, {'attr': {'class': 'form-select-premium select-lg-premium'}}) }}
                                    </div>
                                    <div class="form-status-info mt-2">
                                        <i class="fas fa-link me-1"></i> Liaison automatique aux notes
                                    </div>
                                    {{ form_errors(form.bulletin) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.type, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.type, {'attr': {'class': 'form-select-premium'}}) }}
                                    </div>
                                    {{ form_errors(form.type) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.status, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.status, {'attr': {'class': 'form-select-premium'}}) }}
                                    </div>
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.verificationCode, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.verificationCode, {'attr': {'class': 'form-control-premium', 'placeholder': 'Généré auto si vide'}}) }}
                                    </div>
                                    {{ form_errors(form.verificationCode) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-premium">
                                    {{ form_label(form.validUntil, null, {'label_attr': {'class': 'label-premium'}}) }}
                                    <div class="input-glow-wrapper">
                                        {{ form_widget(form.validUntil, {'attr': {'class': 'form-control-premium'}}) }}
                                    </div>
                                    {{ form_errors(form.validUntil) }}
                                </div>
                            </div>

                            <div class="col-12 mt-5">
                                <div class="upload-zone-premium p-5 rounded-4 border-dashed animate-pulse-soft">
                                    <div class="text-center">
                                        <div class="icon-upload-wrapper mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-3x text-primary-gradient"></i>
                                        </div>
                                        <h6 class="fw-800 text-dark mb-2">Importation de PDF Manuel</h6>
                                        <p class="small text-muted mb-4 mx-auto" style="max-width: 500px;">
                                            Utilisez cette option uniquement si vous disposez d'un document externe. 
                                            EduSmart peut également générer ce PDF automatiquement.
                                        </p>
                                        <div class="max-width-400 mx-auto">
                                            {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control-premium'}}) }}
                                            {{ form_errors(form.pdfFile) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top border-light">
                            <a href="{{ path('admin_certification_index') }}" class="btn-premium-cancel px-4">
                                <i class="fas fa-times me-2"></i> Annuler l'opération
                            </a>
                            <button type="submit" class="btn-premium-submit px-5 shadow-lg">
                                <span>{{ certification.id ? 'Sauvegarder les modifications' : 'Émettre la Certification' }}</span>
                                <i class="fas fa-check-double ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>

                {% if certification.id and certification.hmacHash %}
                <div class="card card-premium-glass mt-4 shadow-sm border-0 animate-slide-up" style="animation-delay: 0.2s;">
                    <div class="card-body py-4 px-5">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="badge-hmac-pulse me-4">
                                    <i class="fas fa-key"></i>
                                </div>
                                <div>
                                    <div class="fw-800 text-dark h6 mb-1">Certificat Signature HMAC</div>
                                    <div class="small text-muted font-monospace opacity-75">SHA256: {{ certification.hmacHash }}</div>
                                </div>
                            </div>
                            <div class="badge bg-success-soft text-success px-4 py-2 rounded-pill fw-900 border-0">INTÉGRITÉ VÉRIFIÉE</div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<style>
    /* --- Futuristic Design System --- */
    .fw-900 { font-weight: 900; }
    .fw-800 { font-weight: 800; }
    .z-index-2 { z-index: 2; }
    
    .bg-success-soft { background-color: rgba(16, 185, 129, 0.1); color: #10b981; }

    /* Orbes Lumineuses */
    .orb {
        position: fixed;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.1;
        z-index: 0;
        pointer-events: none;
        animation: floatOrb 30s infinite alternate ease-in-out;
    }
    .orb-1 { top: -200px; right: -100px; background: #4f46e5; }
    .orb-2 { bottom: -200px; left: -100px; background: #6366f1; }
    @keyframes floatOrb {
        from { transform: translate(0, 0) rotate(0deg); }
        to { transform: translate(150px, 100px) rotate(15deg); }
    }

    /* Cards Glassmorphism */
    .card-premium-glass {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(226, 232, 240, 0.6) !important;
        transition: all 0.4s ease;
    }

    .text-primary-gradient {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .icon-pulse {
        width: 56px;
        height: 56px;
        background: rgba(79, 70, 229, 0.08);
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: softPulse 2s infinite;
    }
    @keyframes softPulse {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.15); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 12px rgba(79, 70, 229, 0); }
        100% { transform: scale(1); }
    }

    /* Form Elements */
    .label-premium {
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #64748b;
        margin-bottom: 10px;
        display: block;
    }

    .form-control-premium, .form-select-premium {
        width: 100%;
        padding: 13px 18px;
        border-radius: 15px;
        border: 2px solid #f1f5f9;
        background: #fdfdfd;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .form-control-premium:focus, .form-select-premium:focus {
        border-color: #6366f1;
        background: #ffffff;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        transform: translateY(-2px);
        outline: none;
    }

    .input-glow-wrapper { position: relative; }
    .input-glow-wrapper::after {
        content: '';
        position: absolute;
        inset: -2px;
        border-radius: 17px;
        background: linear-gradient(135deg, #4f46e5, #818cf8);
        z-index: -1;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .input-glow-wrapper:focus-within::after { opacity: 0.15; }

    /* Custom Upload Zone */
    .upload-zone-premium {
        background: rgba(248, 250, 252, 0.5);
        border: 2px dashed #e2e8f0;
        transition: all 0.3s ease;
    }
    .upload-zone-premium:hover {
        background: rgba(79, 70, 229, 0.02);
        border-color: #6366f1;
    }

    /* Buttons */
    .btn-premium-submit {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        color: white;
        border: none;
        padding: 16px 45px;
        border-radius: 50px;
        font-weight: 800;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .btn-premium-submit:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 20px 40px rgba(79, 70, 229, 0.3);
        color: white;
    }

    .btn-premium-cancel {
        color: #64748b;
        font-weight: 700;
        text-decoration: none;
        padding: 16px 0;
        transition: all 0.3s ease;
    }
    .btn-premium-cancel:hover {
        color: #1e293b;
        transform: translateX(-5px);
    }

    .btn-back-premium {
        display: inline-flex;
        align-items: center;
        color: #64748b;
        text-decoration: none;
        font-weight: 700;
        font-size: 0.85rem;
        transition: opacity 0.3s ease;
    }
    .btn-back-premium:hover { opacity: 0.7; }

    /* Extra UI Elements */
    .badge-premium-logic {
        background: rgba(79, 70, 229, 0.1);
        color: #4f46e5;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
    }

    .badge-hmac-pulse {
        width: 48px;
        height: 48px;
        background: #10b981;
        color: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: softPulseGreen 3s infinite;
    }
    @keyframes softPulseGreen {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.2); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
        100% { transform: scale(1); }
    }

    /* Animations */
    .animate-fade-in { animation: fadeIn 0.8s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    .border-dashed { border-style: dashed !important; border-width: 2px !important; }
    .max-width-400 { max-width: 400px; }
</style>
{% endblock %}


