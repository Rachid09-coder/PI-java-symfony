{% extends 'admin_layout.html.twig' %}

{% block title %}Gestion Bulletin - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 0 auto;">
    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 30px;">
        <a href="{{ path('admin_certification_index') }}" style="color: #64748B;"><i class="fas fa-arrow-left"></i></a>
        <h2 style="font-size: 1.5rem; font-weight: 800;">{{ id is defined and id ? 'Modifier le Bulletin' : 'Générer un Nouveau Bulletin' }}</h2>
    </div>

    <div class="card" style="padding: 40px;">
        <form action="{{ path('admin_certification_index') }}" method="GET">
            <div style="display: flex; flex-direction: column; gap: 20px;">
                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px;">Élève</label>
                    <select style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; background: white;">
                        <option>Alice Martin</option>
                        <option>Bob Durand</option>
                    </select>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Moyenne Générale</label>
                        <input type="number" step="0.1" placeholder="15.5" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none;">
                    </div>
                    <div>
                        <label style="display: block; font-weight: 700; margin-bottom: 8px;">Période</label>
                        <select style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; background: white;">
                            <option>1er Trimestre 2026</option>
                            <option>2ème Trimestre 2026</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px;">Commentaires du Professeur</label>
                    <textarea rows="4" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none;" placeholder="Excellent travail ce trimestre..."></textarea>
                </div>
            </div>

            <div style="border-top: 1px solid #F1F5F9; padding-top: 30px; display: flex; justify-content: flex-end; gap: 15px; margin-top: 20px;">
                <button type="button" class="btn btn-outline" style="padding: 12px 30px;">Aperçu PDF</button>
                <button type="submit" class="btn btn-primary" style="padding: 12px 40px; background: #3B49A2;">Enregistrer le Bulletin</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
