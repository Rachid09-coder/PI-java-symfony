{% extends 'admin_layout.html.twig' %}

{% block title %}Gestion des Certifications - EduSmart{% endblock %}

{% block body %}
<div class="admin-page animate-fade-in py-4">
    {# Orbes décoratives pour la touche futuriste #}
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>

    <div class="container-fluid position-relative z-index-2">
        <header class="mb-5 d-flex justify-content-between align-items-center flex-wrap gap-4">
            <div>
                <h1 class="h2 fw-900 text-dark mb-1">Certifications Officielles</h1>
                <p class="text-muted small mb-0">Régistre de délivrance et suivi des protocoles académiques sécurisés.</p>
            </div>
            <div class="d-flex flex-wrap gap-3">
                <a href="{{ path('admin_audit_log_index') }}" class="btn-premium-action shadow-sm">
                    <i class="fas fa-history text-primary"></i> <span>Audit Log</span>
                </a>
                <a href="{{ path('admin_signature_asset_index') }}" class="btn-premium-action shadow-sm">
                    <i class="fas fa-signature text-primary"></i> <span>Signatures</span>
                </a>
                <a href="{{ path('admin_certification_new') }}" class="btn-premium-launch px-4 shadow-lg">
                    <i class="fas fa-plus-circle me-2"></i>
                    <span class="fw-800">Délivrer Titre</span>
                </a>
            </div>
        </header>

        <div class="card card-premium-glass shadow-lg border-0 overflow-hidden">
            <div class="card-header bg-transparent py-4 px-4 border-bottom border-light d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="icon-pulse-blue me-3">
                        <i class="fas fa-certificate text-primary"></i>
                    </div>
                    <h5 class="m-0 fw-800 text-dark">Registre des Certifications émise</h5>
                </div>
                <div class="badge-premium-logic">
                    <i class="fas fa-database me-2"></i> {{ certifications|length }} instances actives
                </div>
            </div>
            
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover-premium align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Identité de l'Étudiant</th>
                                <th>Classification</th>
                                <th class="text-center">Matricule Unique</th>
                                <th class="text-center">Protocole Date</th>
                                <th class="text-center">Stabilité</th>
                                <th class="pe-4 text-end">Système</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for cert in certifications %}
                            <tr class="animate-row-in {{ cert.revoked ? 'revoked-row' : '' }}">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-premium me-3" style="background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);">
                                            {{ cert.student.prenom|slice(0,1) }}{{ cert.student.name|slice(0,1) }}
                                        </div>
                                        <div>
                                            <div class="fw-800 text-dark">{{ cert.student.prenom }} {{ cert.student.name }}</div>
                                            <div class="small text-muted font-monospace" style="font-size: 0.75rem;">{{ cert.student.email }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge-hologram">
                                        <i class="fas fa-tag me-1 opacity-50"></i>{{ cert.getTypeLabel() }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="id-glow-box">
                                        <span class="text-primary-gradient fw-800">{{ cert.uniqueNumber }}</span>
                                    </div>
                                    <div class="small text-muted mt-1" style="font-size: 0.65rem; opacity: 0.6;">D-KEY: {{ cert.verificationCode }}</div>
                                </td>
                                <td class="text-center">
                                    <div class="date-premium">{{ cert.issuedAt|date('d') }}</div>
                                    <div class="small text-uppercase text-muted fw-700" style="font-size: 0.6rem;">{{ cert.issuedAt|date('M Y') }}</div>
                                </td>
                                <td class="text-center">
                                    {% if cert.revoked %}
                                        <span class="badge-status-revoked"><i class="fas fa-ban me-1"></i>RÉVOQUÉ</span>
                                    {% elseif cert.status == 'ACTIVE' %}
                                        <span class="badge-status-active"><i class="fas fa-shield-check me-1"></i>ACTIF</span>
                                    {% else %}
                                        <span class="badge-status-other">{{ cert.status }}</span>
                                    {% endif %}
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2 action-btns">
                                        {% if cert.pdfPath %}
                                            <a href="{{ path('admin_certification_pdf', {id: cert.id}) }}" class="btn-action-premium text-danger" target="_blank" title="Download PDF">
                                                <i class="fas fa-file-pdf"></i>
                                            </a>
                                        {% else %}
                                            <form action="{{ path('admin_certification_generate_pdf', {id: cert.id}) }}" method="POST" style="display:inline;">
                                                <button class="btn-action-premium text-primary" title="Generate PDF">
                                                    <i class="fas fa-dna"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        <a href="{{ path('admin_certification_edit', {id: cert.id}) }}" class="btn-action-premium text-warning {{ cert.revoked ? 'disabled' : '' }}" title="Modify">
                                            <i class="fas fa-pen-nib"></i>
                                        </a>

                                        {% if not cert.revoked %}
                                        <button class="btn-action-premium text-danger" data-bs-toggle="modal" data-bs-target="#revokeModal{{ cert.id }}" title="Revoke">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                        {% endif %}
                                    </div>

                                    {# Modal de révocation futuriste #}
                                    {% if not cert.revoked %}
                                    <div class="modal fade" id="revokeModal{{ cert.id }}" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content card-premium-glass shadow-2xl border-0 overflow-hidden">
                                                <form action="{{ path('admin_certification_revoke', {id: cert.id}) }}" method="POST">
                                                    <div class="modal-header bg-danger-gradient text-white border-0 py-4 px-4">
                                                        <h5 class="modal-title fw-800"><i class="fas fa-shield-virus me-2"></i>Révoquer Certification</h5>
                                                        <button type="button" class="btn-close btn-close-white opacity-50" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body p-4 p-md-5">
                                                        <div class="alert bg-danger-soft p-4 rounded-4 border-0 mb-4">
                                                            <div class="d-flex">
                                                                <i class="fas fa-exclamation-octagon fa-2x text-danger me-3"></i>
                                                                <div>
                                                                    <strong class="d-block text-danger mb-1">Protocole Irréversible</strong>
                                                                    <span class="small text-danger opacity-80">La révocation sera immédiatement propagée sur le réseau de vérification public.</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="mb-4">
                                                            <label class="label-premium">Document Cible</label>
                                                            <div class="input-glow-wrapper">
                                                                <input type="text" class="form-control-premium bg-light" value="{{ cert.uniqueNumber }}" readonly>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <label class="label-premium">Justification Obligatoire</label>
                                                            <div class="input-glow-wrapper">
                                                                <textarea name="reason" class="form-control-premium" rows="3" required placeholder="Saisir le motif critique..."></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer bg-transparent border-0 p-4 pt-0">
                                                        <button type="button" class="btn-premium-cancel px-4" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="submit" class="btn btn-danger btn-pill fw-800 px-5 shadow-lg">Lancer Révocation</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="empty-state-icon mb-3">
                                        <i class="fas fa-box-open fa-3x opacity-20"></i>
                                    </div>
                                    <p class="text-muted fw-700">Aucun titre officiellement répertorié.</p>
                                    <a href="{{ path('admin_certification_new') }}" class="btn-premium-launch mt-2 px-4 shadow">
                                        Émettre le premier bloc
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* --- Futuristic Design System --- */
    .fw-900 { font-weight: 900; }
    .fw-800 { font-weight: 800; }
    .fw-700 { font-weight: 700; }
    .z-index-2 { z-index: 2; }
    
    /* Background Orbs */
    .orb {
        position: fixed;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        filter: blur(120px);
        opacity: 0.1;
        z-index: 0;
        pointer-events: none;
        animation: floatOrb 30s infinite alternate ease-in-out;
    }
    .orb-1 { top: -200px; right: -100px; background: #6366f1; }
    .orb-2 { bottom: -200px; left: -100px; background: #4f46e5; }
    @keyframes floatOrb {
        from { transform: translate(0, 0) scale(1); }
        to { transform: translate(100px, 50px) scale(1.1) rotate(10deg); }
    }

    /* Glassmorphism Card */
    .card-premium-glass {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(226, 232, 240, 0.6) !important;
        border-radius: 28px;
    }

    /* Table Styles */
    .table-hover-premium thead th {
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #94a3b8;
        padding: 20px 15px;
        border-bottom: 2px solid #f1f5f9;
        background: rgba(248, 250, 252, 0.3);
    }
    .table-hover-premium tbody td {
        padding: 20px 15px;
        border-bottom: 1px solid #f1f5f9;
        transition: all 0.3s ease;
    }
    .table-hover-premium tbody tr { transition: all 0.3s ease; }
    .table-hover-premium tbody tr:hover {
        background: rgba(79, 70, 229, 0.03);
        transform: scale(1.002);
    }
    .revoked-row { background: rgba(239, 68, 68, 0.02); }

    /* Buttons */
    .btn-premium-launch {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        color: white !important;
        border: none;
        padding: 12px 28px;
        border-radius: 50px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .btn-premium-launch:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow: 0 15px 30px rgba(79, 70, 229, 0.3);
    }

    .btn-premium-action {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid #e2e8f0;
        padding: 12px 20px;
        border-radius: 50px;
        color: #64748b;
        font-weight: 800;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }
    .btn-premium-action:hover {
        background: #ffffff;
        color: #4f46e5;
        border-color: #4f46e5;
        transform: translateY(-2px);
    }

    .btn-action-premium {
        width: 36px;
        height: 36px;
        border-radius: 12px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        color: inherit;
        text-decoration: none;
    }
    .btn-action-premium:hover {
        transform: scale(1.2) rotate(5deg);
        background: #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    /* Badges & Holograms */
    .badge-hologram {
        background: #f1f5f9;
        color: #475569;
        font-weight: 800;
        font-size: 0.7rem;
        padding: 6px 12px;
        border-radius: 50px;
        text-transform: uppercase;
        border: 1px solid #e2e8f0;
    }

    .badge-status-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        font-weight: 800;
        font-size: 0.7rem;
        padding: 6px 16px;
        border-radius: 50px;
    }
    .badge-status-revoked {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        font-weight: 800;
        font-size: 0.7rem;
        padding: 6px 16px;
        border-radius: 50px;
    }

    .id-glow-box {
        background: #ffffff;
        padding: 4px 12px;
        border-radius: 10px;
        border: 1px solid #eef2ff;
        display: inline-block;
        box-shadow: 0 4px 10px rgba(79, 70, 229, 0.05);
    }

    .text-primary-gradient {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* UI Elements */
    .avatar-premium {
        width: 42px;
        height: 42px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #64748b;
        font-size: 0.85rem;
    }

    .icon-pulse-blue {
        width: 44px;
        height: 44px;
        background: rgba(79, 70, 229, 0.1);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulseBlue 3s infinite;
    }
    @keyframes pulseBlue {
        0% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.2); }
        70% { box-shadow: 0 0 0 10px rgba(79, 70, 229, 0); }
        100% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0); }
    }

    .badge-premium-logic {
        background: #f8fafc;
        color: #64748b;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.75rem;
        border: 1px solid #e2e8f0;
    }

    .date-premium { font-weight: 900; font-size: 1.1rem; color: #1e293b; line-height: 1; }

    /* Modal Styling */
    .bg-danger-gradient { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
    .bg-danger-soft { background: rgba(239, 68, 68, 0.05); }
    
    .label-premium {
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #94a3b8;
        margin-bottom: 8px;
        display: block;
    }
    .form-control-premium {
        width: 100%;
        padding: 12px 18px;
        border-radius: 14px;
        border: 2px solid #f1f5f9;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    .form-control-premium:focus {
        border-color: #ef4444;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
        outline: none;
    }

    .btn-premium-cancel {
        background: transparent;
        border: none;
        color: #94a3b8;
        font-weight: 700;
        transition: all 0.3s ease;
    }
    .btn-premium-cancel:hover { color: #475569; }

    /* Animations */
    .animate-fade-in { animation: fadeIn 0.8s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

    .animate-row-in { animation: rowIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) both; }
    @keyframes rowIn { from { opacity: 0; transform: translateX(-10px); } to { opacity: 1; transform: translateX(0); } }

    /* Offset animation for rows */
    {% for i in 1..20 %}
    .animate-row-in:nth-child({{ i }}) { animation-delay: {{ 0.05 * i }}s; }
    {% endfor %}
</style>
{% endblock %}

