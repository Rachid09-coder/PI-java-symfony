{% extends 'admin_layout.html.twig' %}

{% block title %}Gestion Certifications - EduSmart{% endblock %}

{% block body %}
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h2 style="font-size: 1.5rem; font-weight: 800; color: #1E293B;">Certifications & Bulletins</h2>
    <div style="display: flex; gap: 15px;">
        <a href="{{ path('admin_bulletin_new') }}" class="btn btn-outline" style="border-radius: 12px; padding: 10px 20px;">+ Nouveau Bulletin</a>
        <a href="{{ path('admin_certification_new') }}" class="btn btn-primary" style="background: #3B49A2; border-radius: 12px; padding: 10px 25px;">+ Délivrer Certificat</a>
    </div>
</div>

<div class="card" style="padding: 0; overflow: hidden;">
    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="text-align: left; background: #F8FAFC; border-bottom: 2px solid #F1F5F9; color: #64748B; font-size: 0.8rem; text-transform: uppercase;">
                <th style="padding: 20px;">Élève</th>
                <th style="padding: 20px;">Cours / Formation</th>
                <th style="padding: 20px;">Date d'émission</th>
                <th style="padding: 20px;">Type</th>
                <th style="padding: 20px; text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cert in certifications %}
                <tr style="border-bottom: 1px solid #F1F5F9; transition: 0.2s;" onmouseover="this.style.background='#FBFDFF'" onmouseout="this.style.background='transparent'">
                    <td style="padding: 20px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <div style="width: 35px; height: 35px; border-radius: 50%; background: #EEF2FF; display: flex; align-items: center; justify-content: center; color: #6366F1; font-weight: 800; font-size: 0.8rem;">{{ cert.student|first }}</div>
                            <span style="font-weight: 700; color: #1E293B;">{{ cert.student }}</span>
                        </div>
                    </td>
                    <td style="padding: 20px; color: #64748B; font-weight: 600;">{{ cert.course }}</td>
                    <td style="padding: 20px; color: #94A3B8;">{{ cert.date }}</td>
                    <td style="padding: 20px;">
                        <span style="background: {{ loop.first ? '#D1FAE5' : '#DBEAFE' }}; color: {{ loop.first ? '#10B981' : '#3B49A2' }}; padding: 5px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 700;">
                            {{ loop.first ? 'Certificat' : 'Bulletin' }}
                        </span>
                    </td>
                    <td style="padding: 20px; text-align: right;">
                        <div style="display: flex; gap: 10px; justify-content: flex-end;">
                            {% if loop.first %}
                                <a href="{{ path('admin_certification_edit', {id: cert.id}) }}" class="btn btn-outline" title="Modifier Certificat" style="padding: 8px 12px; border-radius: 8px; color: #64748B;"><i class="fas fa-edit"></i></a>
                            {% else %}
                                <a href="{{ path('admin_bulletin_edit', {id: cert.id}) }}" class="btn btn-outline" title="Modifier Bulletin" style="padding: 8px 12px; border-radius: 8px; color: #64748B;"><i class="fas fa-edit"></i></a>
                            {% endif %}
                            <button class="btn btn-outline" title="Télécharger PDF" style="padding: 8px 12px; border-radius: 8px; color: #3B49A2;"><i class="fas fa-file-pdf"></i></button>
                            <button class="btn btn-outline" title="Supprimer" style="padding: 8px 12px; border-radius: 8px; color: #EF4444;"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
