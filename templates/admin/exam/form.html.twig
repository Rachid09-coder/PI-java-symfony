{% extends 'admin_layout.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier l\'Examen' : 'Créer un Nouvel Examen' }} - EduSmart{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('admin_exams_manage') }}" class="btn btn-link p-0 text-decoration-none">
        <i class="fas fa-arrow-left me-1"></i> Retour à la gestion
    </a>
    <h1 class="h3 mt-2">{{ isEdit ? 'Modifier l\'Examen' : 'Créer un Nouvel Examen' }}</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0 overflow-hidden">
            <div class="card-header bg-primary py-3">
                <h6 class="m-0 font-weight-bold text-white">Informations de l'Évaluation</h6>
            </div>
            <div class="card-body p-4">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.title, 'Titre de l\'examen') }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Contrôle Final Algèbre'}}) }}
                        {{ form_errors(form.title) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.duration, 'Durée (minutes)') }}
                            {{ form_widget(form.duration, {'attr': {'class': 'form-control', 'placeholder': '60'}}) }}
                            {{ form_errors(form.duration) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.type) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.externalLink, 'Lien Externe (Optionnel)') }}
                            {{ form_widget(form.externalLink, {'attr': {'class': 'form-control', 'placeholder': 'https://...'}}) }}
                            {{ form_errors(form.externalLink) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.filePath, 'Fichier Exam (PDF)') }}
                            {{ form_widget(form.filePath, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.filePath) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description / Consignes') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Calculatrice autorisée, etc.'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow">
                            <i class="fas fa-save fs-5"></i>
                            <span class="fw-bold">Enregistrer l'Examen</span>
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
