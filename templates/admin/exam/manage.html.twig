{% extends 'admin_layout.html.twig' %}

{% block title %}Gestion des Examens - EduSmart{% endblock %}

{% block body %}
<div class="admin-page animate-fade-in py-4">
    {# Orbes décoratives pour la touche futuriste #}
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>

    <div class="container-fluid position-relative z-index-2">
        <header class="mb-5 d-flex justify-content-between align-items-center flex-wrap gap-4">
            <div>
                <h1 class="h2 fw-900 text-dark mb-1">Examens & Évaluations</h1>
                <p class="text-muted small mb-0">Centre de commande des épreuves et du catalogue d'évaluations analytiques.</p>
            </div>
            <div class="d-flex flex-wrap gap-3">
                <button class="btn-premium-action shadow-sm" onclick="document.getElementById('eval-modal').style.display='flex'">
                    <i class="fas fa-plus-circle text-primary"></i> <span>Ajouter Évaluation</span>
                </button>
                <a href="{{ path('admin_exam_new') }}" class="btn-premium-launch px-4 shadow-lg">
                    <i class="fas fa-file-signature me-2"></i>
                    <span class="fw-800">Créer un Examen</span>
                </a>
            </div>
        </header>

        {# Search & Filter Bar - Futuristic Glass #}
        <div class="card card-premium-glass-sm shadow-sm mb-4 border-0">
            <div class="card-body p-3">
                <div class="row g-3">
                    <div class="col-md-9">
                        <div class="input-glow-wrapper">
                            <i class="fas fa-search search-icon-premium"></i>
                            <input type="text" id="searchInput" class="form-control-premium-search" placeholder="Rechercher une épreuve par titre ou métadonnée..." onkeyup="filterTable()">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button onclick="sortTable()" id="sortBtn" class="btn-premium-action w-100 justify-content-center">
                            <i class="fas fa-sort-alpha-down me-2" id="sortIcon"></i>
                            <span>Trier A-Z</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-premium-glass shadow-lg border-0 overflow-hidden">
            <div class="card-header bg-transparent py-4 px-4 border-bottom border-light d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="icon-pulse-blue me-3">
                        <i class="fas fa-vial text-primary"></i>
                    </div>
                    <h5 class="m-0 fw-800 text-dark">Catalogue des Épreuves Systémiques</h5>
                </div>
                <div class="badge-premium-logic">
                    <i class="fas fa-microchip me-2"></i> {{ exams|length }} instances actives
                </div>
            </div>
            
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover-premium align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Référentiel de l'Examen</th>
                                <th class="text-center">Classification</th>
                                <th class="text-center">Structure</th>
                                <th class="text-center">Dimensions Time</th>
                                <th class="pe-4 text-end">Opérations</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for exam in exams %}
                            <tr class="animate-row-in">
                                <td class="ps-4">
                                    <div class="fw-800 text-dark mb-1">{{ exam.title }}</div>
                                    <div class="small text-muted font-monospace" style="font-size: 0.65rem;">UID: <span class="text-primary opacity-75">#{{ exam.id }}</span></div>
                                </td>
                                <td class="text-center">
                                    <span class="badge-hologram">
                                        {{ exam.type }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="data-badge-blue">
                                        <i class="fas fa-tasks me-1 small"></i> {{ exam.questions|length }} Segments
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="date-capsule-sm">
                                        <i class="far fa-clock me-1 opacity-50"></i> {{ exam.duration ? exam.duration ~ ' min' : '∞' }}
                                    </div>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2 action-btns">
                                        <a href="{{ path('admin_exam_questions', {id: exam.id}) }}" class="btn-action-premium text-primary" title="Build Architecture">
                                            <i class="fas fa-project-diagram"></i>
                                        </a>
                                        <a href="{{ path('admin_exam_edit', {id: exam.id}) }}" class="btn-action-premium text-warning" title="Edit Logic">
                                            <i class="fas fa-sliders-h"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_exam_delete', {'id': exam.id}) }}" onsubmit="return confirm('Confirmer la désactivation complète de ce protocole d\'examen ?');" class="m-0">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                            <button class="btn-action-premium text-danger border-0">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="empty-state-icon mb-3">
                                        <i class="fas fa-brain fa-3x opacity-20"></i>
                                    </div>
                                    <p class="text-muted fw-800">Aucune épreuve répertoriée dans le noyau.</p>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Ajout Évaluation Rapide - Futuristic Glass -->
<div id="eval-modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); z-index: 1050; align-items: center; justify-content: center; backdrop-filter: blur(12px);">
    <div class="card card-premium-glass-modal shadow-2xl border-0 overflow-hidden" style="width: 600px; border-radius: 32px;">
        <div class="card-header bg-primary-gradient text-white p-4 border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="m-0 fw-800"><i class="fas fa-plus-circle me-2"></i>Injecter une Évaluation</h5>
                <button type="button" class="btn-close-premium" onclick="document.getElementById('eval-modal').style.display='none'">&times;</button>
            </div>
        </div>
        <div class="card-body p-4 p-md-5">
            <form>
                <div class="mb-4">
                    <label class="label-premium">Protocole d'Examen Cible</label>
                    <div class="input-glow-wrapper">
                        <select class="form-select-premium">
                            {% for exam in exams %}
                                <option value="{{ exam.id }}">{{ exam.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="label-premium">Énoncé Systémique</label>
                    <div class="input-glow-wrapper">
                        <textarea class="form-control-premium" rows="3" placeholder="Saisir la base de la question..."></textarea>
                    </div>
                </div>
                <div class="row g-3 mb-4">
                    <div class="col-6">
                        <label class="label-premium small">Option Alpha (Correcte)</label>
                        <input type="text" class="form-control-premium border-success-subtle" placeholder="Correcte">
                    </div>
                    <div class="col-6">
                        <label class="label-premium small">Option Beta</label>
                        <input type="text" class="form-control-premium" placeholder="Distracteur B">
                    </div>
                    <div class="col-6">
                        <label class="label-premium small">Option Gamma</label>
                        <input type="text" class="form-control-premium" placeholder="Distracteur C">
                    </div>
                    <div class="col-6">
                        <label class="label-premium small">Option Delta</label>
                        <input type="text" class="form-control-premium" placeholder="Distracteur D">
                    </div>
                </div>
                <div class="d-flex gap-3 mt-4">
                    <button type="button" class="btn btn-premium-cancel flex-grow-1" onclick="document.getElementById('eval-modal').style.display='none'">Avorter</button>
                    <button type="button" class="btn-premium-launch flex-grow-2 py-3 px-5 shadow">Valider & Déployer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* --- Futuristic Design System --- */
    .fw-900 { font-weight: 900; }
    .fw-800 { font-weight: 800; }
    .z-index-2 { z-index: 2; }
    .bg-primary-gradient { background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%); }
    
    /* Background Orbs */
    .orb {
        position: fixed;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        filter: blur(130px);
        opacity: 0.08;
        z-index: 0;
        pointer-events: none;
        animation: floatOrb 35s infinite alternate ease-in-out;
    }
    .orb-1 { top: -200px; right: -100px; background: #6366f1; }
    .orb-2 { bottom: -200px; left: -100px; background: #4f46e5; }
    @keyframes floatOrb {
        from { transform: translate(0, 0) scale(1); }
        to { transform: translate(100px, 50px) scale(1.1) rotate(10deg); }
    }

    /* Glassmorphism Card */
    .card-premium-glass {
        background: rgba(255, 255, 255, 0.92);
        backdrop-filter: blur(25px);
        border: 1px solid rgba(226, 232, 240, 0.5) !important;
        border-radius: 30px;
    }
    .card-premium-glass-sm {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(226, 232, 240, 0.4) !important;
        border-radius: 20px;
    }
    .card-premium-glass-modal {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Table Styles */
    .table-hover-premium thead th {
        font-size: 0.72rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #94a3b8;
        padding: 22px 18px;
        border-bottom: 2px solid #f1f5f9;
        background: rgba(248, 250, 252, 0.4);
    }
    .table-hover-premium tbody td {
        padding: 22px 18px;
        border-bottom: 1px solid #f1f5f9;
        transition: all 0.3s ease;
    }
    .table-hover-premium tbody tr:hover {
        background: rgba(79, 70, 229, 0.03);
    }

    /* Buttons */
    .btn-premium-launch {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        color: white !important;
        border: none;
        padding: 14px 30px;
        border-radius: 50px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        font-weight: 800;
    }
    .btn-premium-launch:hover {
        transform: translateY(-5px) scale(1.03);
        box-shadow: 0 15px 35px rgba(79, 70, 229, 0.25);
    }

    .btn-premium-action {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid #e2e8f0;
        padding: 12px 24px;
        border-radius: 50px;
        color: #64748b;
        font-weight: 800;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
    }
    .btn-premium-action:hover {
        background: #ffffff;
        color: #4f46e5;
        border-color: #4f46e5;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }

    .btn-action-premium {
        width: 38px;
        height: 38px;
        border-radius: 14px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        color: inherit;
        text-decoration: none;
    }
    .btn-action-premium:hover {
        transform: scale(1.2) rotate(5deg);
        background: #fff;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    /* Inputs */
    .form-control-premium-search {
        width: 100%;
        padding: 12px 18px 12px 50px;
        border-radius: 14px;
        border: 1px solid #f1f5f9;
        font-size: 0.95rem;
        background: #ffffff;
        transition: all 0.3s ease;
    }
    .form-control-premium-search:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        outline: none;
    }
    .search-icon-premium {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Modal Form Elements */
    .label-premium {
        font-size: 0.72rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #94a3b8;
        margin-bottom: 10px;
        display: block;
        letter-spacing: 0.05em;
    }
    .form-control-premium, .form-select-premium {
        width: 100%;
        padding: 14px 20px;
        border-radius: 16px;
        border: 2px solid #f1f5f9;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }
    .form-control-premium:focus, .form-select-premium:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 5px rgba(99, 102, 241, 0.08);
        outline: none;
    }

    .btn-premium-cancel {
        background: transparent;
        border: none;
        color: #94a3b8;
        font-weight: 800;
        transition: all 0.3s ease;
    }
    .btn-premium-cancel:hover { color: #64748b; }

    .btn-close-premium {
        background: none;
        border: none;
        color: white;
        font-size: 1.8rem;
        line-height: 1;
        opacity: 0.7;
        transition: transform 0.3s ease;
    }
    .btn-close-premium:hover { opacity: 1; transform: rotate(90deg); }

    /* Badges */
    .badge-hologram {
        background: #f1f5f9;
        color: #475569;
        font-weight: 800;
        font-size: 0.65rem;
        padding: 6px 12px;
        border-radius: 50px;
        text-transform: uppercase;
        border: 1px solid #e2e8f0;
    }
    .data-badge-blue {
        background: rgba(79, 70, 229, 0.08);
        color: #4f46e5;
        padding: 4px 12px;
        border-radius: 50px;
        font-weight: 800;
        font-size: 0.7rem;
        display: inline-block;
    }
    .date-capsule-sm {
        background: #f8fafc;
        padding: 4px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        color: #64748b;
        display: inline-block;
        border: 1px solid #f1f5f9;
    }

    .icon-pulse-blue {
        width: 48px;
        height: 48px;
        background: rgba(79, 70, 229, 0.08);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulseBlue 4s infinite;
    }
    @keyframes pulseBlue {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.2); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 12px rgba(79, 70, 229, 0); }
        100% { transform: scale(1); }
    }

    .badge-premium-logic {
        background: #f8fafc;
        color: #64748b;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: 800;
        font-size: 0.75rem;
        border: 1px solid #e2e8f0;
    }

    /* Animations */
    .animate-fade-in { animation: fadeIn 0.8s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

    .animate-row-in { animation: rowIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) both; }
    @keyframes rowIn { from { opacity: 0; transform: translateX(-15px); } to { opacity: 1; transform: translateX(0); } }

    {% for i in 1..20 %}
    .animate-row-in:nth-child({{ i }}) { animation-delay: {{ 0.04 * i }}s; }
    {% endfor %}

    .flex-grow-2 { flex-grow: 2; }
</style>

<script>
function filterTable() {
    const input = document.getElementById('searchInput');
    const filter = input.value.toLowerCase();
    const table = document.querySelector('table tbody');
    const rows = table.getElementsByTagName('tr');

    for (let i = 0; i < rows.length; i++) {
        const titleCell = rows[i].getElementsByTagName('td')[0];
        if (titleCell) {
            const titleText = titleCell.textContent || titleCell.innerText;
            if (titleText.toLowerCase().indexOf(filter) > -1) {
                rows[i].style.display = '';
            } else {
                rows[i].style.display = 'none';
            }
        }
    }
}

let sortAscending = true;
function sortTable() {
    const table = document.querySelector('table tbody');
    const rows = Array.from(table.getElementsByTagName('tr'));
    if (rows.length === 1 && rows[0].innerText.includes('Aucun')) return;
    
    const sortBtn = document.getElementById('sortBtn');
    const sortIcon = document.getElementById('sortIcon');
    
    rows.sort((a, b) => {
        const aText = a.getElementsByTagName('td')[0]?.textContent.trim() || '';
        const bText = b.getElementsByTagName('td')[0]?.textContent.trim() || '';
        
        if (sortAscending) {
            return aText.localeCompare(bText, 'fr', { sensitivity: 'base' });
        } else {
            return bText.localeCompare(aText, 'fr', { sensitivity: 'base' });
        }
    });
    
    rows.forEach(row => table.appendChild(row));
    
    sortAscending = !sortAscending;
    if (sortAscending) {
        sortIcon.className = 'fas fa-sort-alpha-down me-2';
        sortBtn.querySelector('span').textContent = 'Trier A-Z';
    } else {
        sortIcon.className = 'fas fa-sort-alpha-up me-2';
        sortBtn.querySelector('span').textContent = 'Trier Z-A';
    }
}
</script>
{% endblock %}
