{% extends 'admin_layout.html.twig' %}

{% block title %}Registre des Certifications - EduSmart{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="h3 mb-1">Registre des Certifications</h1>
        <p class="text-muted small mb-0">Liste complète des titres académiques délivrés par l'établissement.</p>
    </div>
    <a href="{{ path('app_certification_new') }}" class="btn btn-pill btn-premium-primary d-flex align-items-center gap-2 px-4 shadow hover-scale">
        <i class="fas fa-plus-circle fs-5"></i>
        <span class="fw-bold">Nouvelle certification</span>
    </a>
</div>

<div class="card shadow border-0 overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-scroll me-2"></i>Certifications Académiques</h6>
        <span class="badge bg-primary-soft text-primary px-3">{{ certifications|length }} titres</span>
    </div>
    <div class="card-body p-0">
        {% if certifications is empty %}
            <div class="text-center py-5">
                <div class="text-muted mb-3"><i class="fas fa-certificate fa-3x"></i></div>
                <p class="mb-0 text-muted">Aucune certification n’a encore été générée.</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">ID / Code</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted">Étudiant</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted text-center">Type</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted text-center">Émise le</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted text-center">Statut</th>
                            <th class="pe-4 py-3 text-uppercase small fw-bold text-muted text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for certification in certifications %}
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">#{{ certification.id }}</div>
                                    <code class="small text-indigo">{{ certification.verificationCode }}</code>
                                </td>
                                <td>
                                    <div class="text-dark fw-bold small">
                                        {{ certification.student ? certification.student.email : 'Utilisateur inconnu' }}
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-primary border px-2 py-1">
                                        {{ certification.type }}
                                    </span>
                                </td>
                                <td class="text-center small text-muted">
                                    {{ certification.issuedAt ? certification.issuedAt|date('d/m/Y H:i') : '—' }}
                                </td>
                                <td class="text-center">
                                    {% if certification.status == 'ACTIVE' %}
                                        <span class="badge bg-success-soft text-success px-3 rounded-pill">Active</span>
                                    {% else %}
                                        <span class="badge bg-secondary px-3 rounded-pill">{{ certification.status }}</span>
                                    {% endif %}
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="{{ path('app_certification_show', {id: certification.id}) }}"
                                           class="btn btn-sm btn-light-soft text-primary shadow-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_certification_edit', {id: certification.id}) }}"
                                           class="btn btn-sm btn-light-soft text-warning shadow-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('certification/_delete_form.html.twig', {certification: certification}) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>

<style>
    .bg-primary-soft { background-color: #eef2ff !important; color: #4f46e5 !important; }
    .bg-success-soft { background-color: #ecfdf5 !important; color: #10b981 !important; }
    .btn-light-soft { background-color: #f8fafc; color: #64748b; border: 1px solid #e2e8f0; }
    .btn-light-soft:hover { background-color: #f1f5f9; color: #334155; }
    .text-indigo { color: #4f46e5 !important; }
    .btn-pill { border-radius: 50px !important; padding-left: 20px !important; padding-right: 20px !important; }
    .hover-scale { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    .hover-scale:hover { transform: translateY(-3px) scale(1.02); box-shadow: 0 8px 20px rgba(79, 70, 229, 0.15) !important; }

    .btn-premium-primary {
        background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
        border: none;
        color: white;
    }
</style>
{% endblock %}