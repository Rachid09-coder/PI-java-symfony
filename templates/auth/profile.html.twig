{% extends 'base.html.twig' %}

{% block title %}Mon Profil - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 1000px; margin: 0 auto; padding: 40px;">
    <div style="display: grid; grid-template-columns: 1fr 1.5fr; gap: 40px;">
        
        <!-- Left Column: User Overview -->
        <div class="card" style="padding: 40px; text-align: center; height: fit-content;">
            <div style="position: relative; width: 120px; height: 120px; margin: 0 auto 25px;">
                <img src="https://ui-avatars.com/api/?name=Jean+Dupont&background=3B49A2&color=fff&size=128" style="width: 100%; height: 100%; border-radius: 30px; object-fit: cover;">
                <button style="position: absolute; bottom: -5px; right: -5px; width: 35px; height: 35px; border-radius: 10px; background: white; border: 1px solid #E2E8F0; color: #3B49A2; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: var(--shadow-sm);">
                    <i class="fas fa-camera" style="font-size: 0.9rem;"></i>
                </button>
            </div>
            <h3 style="font-size: 1.4rem; font-weight: 800; color: #1E293B; margin-bottom: 5px;">Jean Dupont</h3>
            <p style="color: #64748B; font-size: 0.9rem; margin-bottom: 15px;">jean.dupont@email.com</p>
            <span style="background: #EEF2FF; color: #6366F1; padding: 6px 15px; border-radius: 20px; font-size: 0.8rem; font-weight: 700; text-transform: uppercase;">Étudiant</span>
            
            <div style="margin-top: 40px; padding-top: 30px; border-top: 1px solid #F1F5F9; display: flex; flex-direction: column; gap: 15px;">
                <div style="display: flex; justify-content: space-between; font-size: 0.9rem;">
                    <span style="color: #64748B;">Cours suivis</span>
                    <span style="font-weight: 700; color: #1E293B;">12</span>
                </div>
                <div style="display: flex; justify-content: space-between; font-size: 0.9rem;">
                    <span style="color: #64748B;">Certificats</span>
                    <span style="font-weight: 700; color: #1E293B;">3</span>
                </div>
            </div>
        </div>

        <!-- Right Column: Edit Profile -->
        <div class="card" style="padding: 40px;">
            <h3 style="font-size: 1.2rem; font-weight: 800; margin-bottom: 30px;">Informations Personnelles</h3>
            
            <form style="display: flex; flex-direction: column; gap: 25px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Prénom</label>
                        <input type="text" value="Jean" style="width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                    </div>
                    <div>
                        <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Nom</label>
                        <input type="text" value="Dupont" style="width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                    </div>
                </div>

                <div>
                    <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Adresse Email</label>
                    <input type="email" value="jean.dupont@email.com" style="width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                </div>

                <div>
                    <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Numéro de Téléphone</label>
                    <input type="tel" value="+33 6 12 34 56 78" style="width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                </div>

                <div style="padding-top: 20px; border-top: 1px solid #F1F5F9; margin-top: 10px;">
                    <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px;">Sécurité</h3>
                    <div style="display: flex; flex-direction: column; gap: 15px;">
                        <button type="button" class="btn btn-outline" style="width: 100%; justify-content: flex-start; padding: 12px 20px; font-weight: 600;">
                            <i class="fas fa-lock" style="margin-right: 12px; opacity: 0.5;"></i> Changer le mot de passe
                        </button>
                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 12px 20px; border: 1px solid #E2E8F0; border-radius: 12px;">
                            <div style="display: flex; align-items: center; gap: 12px;">
                                <i class="fas fa-shield-alt" style="color: #10B981;"></i>
                                <span style="font-weight: 600;">Vérification en deux étapes</span>
                            </div>
                            <div style="width: 40px; height: 20px; background: #3B49A2; border-radius: 10px; position: relative; cursor: pointer;">
                                <div style="width: 16px; height: 16px; background: white; border-radius: 50%; position: absolute; top: 2px; right: 2px;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 15px; background: #3B49A2; font-weight: 700; border-radius: 12px;">Enregistrer les Modifications</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
