{% extends 'student_layout.html.twig' %}

{% block title %}Mon Profil - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 1000px; margin: 0 auto; padding: 40px;">
    {% if app.flashes %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div style="padding: 15px 20px; margin-bottom: 20px; border-radius: 12px; background: {% if label == 'success' %}#D1FAE5{% else %}#FEE2E2{% endif %}; color: {% if label == 'success' %}#10B981{% else %}#EF4444{% endif %}; font-weight: 600;">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div style="display: grid; grid-template-columns: 1fr 1.5fr; gap: 40px;">
        
        <!-- Left Column: User Overview -->
        <div class="card" style="padding: 40px; text-align: center; height: fit-content;">
            <div style="position: relative; width: 120px; height: 120px; margin: 0 auto 25px;">
                <img src="https://ui-avatars.com/api/?name={{ user.prenom }}+{{ user.name }}&background=3B49A2&color=fff&size=128" style="width: 100%; height: 100%; border-radius: 30px; object-fit: cover;">
            </div>
            <h3 style="font-size: 1.4rem; font-weight: 800; color: #1E293B; margin-bottom: 5px;">{{ user.prenom }} {{ user.name }}</h3>
            <p style="color: #64748B; font-size: 0.9rem; margin-bottom: 15px;">{{ user.email }}</p>
            <span style="background: #EEF2FF; color: #6366F1; padding: 6px 15px; border-radius: 20px; font-size: 0.8rem; font-weight: 700; text-transform: uppercase;">
                {% if user.role == 'etudiant' %}Étudiant{% elseif user.role == 'professeur' %}Professeur{% else %}Administrateur{% endif %}
            </span>
        </div>

        <!-- Right Column: Edit Profile -->
        <div class="card" style="padding: 40px;">
            <h3 style="font-size: 1.2rem; font-weight: 800; margin-bottom: 30px;">Informations Personnelles</h3>
            
            <form method="POST" style="display: flex; flex-direction: column; gap: 25px;">
                {{ form_start(form) }}

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div>
                        <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Prénom</label>
                        {{ form_widget(form.prenom, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;'}}) }}
                        {% if form.prenom.vars.errors %}
                            <p style="color: #EF4444; font-size: 0.8rem; margin-top: 5px;">
                                {% for error in form.prenom.vars.errors %}{{ error.message }}{% endfor %}
                            </p>
                        {% endif %}
                    </div>
                    <div>
                        <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Nom</label>
                        {{ form_widget(form.name, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;'}}) }}
                        {% if form.name.vars.errors %}
                            <p style="color: #EF4444; font-size: 0.8rem; margin-top: 5px;">
                                {% for error in form.name.vars.errors %}{{ error.message }}{% endfor %}
                            </p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Adresse Email</label>
                    {{ form_widget(form.email, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;'}}) }}
                    {% if form.email.vars.errors %}
                        <p style="color: #EF4444; font-size: 0.8rem; margin-top: 5px;">
                            {% for error in form.email.vars.errors %}{{ error.message }}{% endfor %}
                        </p>
                    {% endif %}
                </div>

                <div>
                    <label style="display: block; font-weight: 700; font-size: 0.85rem; margin-bottom: 8px; color: #64748B;">Numéro de Téléphone</label>
                    {{ form_widget(form.numtel, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;'}}) }}
                    {% if form.numtel.vars.errors %}
                        <p style="color: #EF4444; font-size: 0.8rem; margin-top: 5px;">
                            {% for error in form.numtel.vars.errors %}{{ error.message }}{% endfor %}
                        </p>
                    {% endif %}
                </div>

                <div style="padding-top: 20px; border-top: 1px solid #F1F5F9; margin-top: 10px;">
                    <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px;">Sécurité</h3>
                    <div style="display: flex; flex-direction: column; gap: 15px;">
                        <a href="{{ path('app_change_password') }}" class="btn btn-outline" style="width: 100%; justify-content: flex-start; padding: 12px 20px; font-weight: 600; text-decoration: none; display: flex; align-items: center;">
                            <i class="fas fa-lock" style="margin-right: 12px; opacity: 0.5;"></i> Changer le mot de passe
                        </a>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 15px; background: #3B49A2; font-weight: 700; border-radius: 12px;">Enregistrer les Modifications</button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
