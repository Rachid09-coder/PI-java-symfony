{% extends 'student_layout.html.twig' %}

{% block title %}Changer le mot de passe - EduSmart{% endblock %}

{% block body %}
<div style="max-width: 600px; margin: 40px auto; padding: 20px;">
    <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 30px;">
        <a href="{{ path('app_profile') }}" style="color: #64748B;"><i class="fas fa-arrow-left"></i></a>
        <h2 style="font-size: 1.5rem; font-weight: 800; color: #1E293B;">Changer le mot de passe</h2>
    </div>

    <div class="card" style="padding: 40px;">
        <form action="{{ path('app_profile') }}" method="GET">
            <div style="display: flex; flex-direction: column; gap: 25px;">
                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; color: #475569;">Mot de passe actuel</label>
                    <input type="password" placeholder="••••••••" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                </div>

                <div style="height: 1px; background: #F1F5F9; margin: 5px 0;"></div>

                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; color: #475569;">Nouveau mot de passe</label>
                    <input type="password" placeholder="••••••••" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                    <p style="font-size: 0.75rem; color: #94A3B8; margin-top: 8px;">Minimum 8 caractères, incluant une majuscule et un chiffre.</p>
                </div>

                <div>
                    <label style="display: block; font-weight: 700; margin-bottom: 8px; color: #475569;">Confirmer le nouveau mot de passe</label>
                    <input type="password" placeholder="••••••••" style="width: 100%; padding: 14px; border: 1px solid #E2E8F0; border-radius: 12px; outline: none; font-weight: 600;">
                </div>
            </div>

            <div style="margin-top: 40px; display: flex; flex-direction: column; gap: 15px;">
                <button type="submit" class="btn btn-primary" style="width: 100%; padding: 14px; background: #3B49A2; font-weight: 700; border-radius: 12px;">Mettre à jour le mot de passe</button>
                <a href="{{ path('app_profile') }}" style="text-align: center; color: #64748B; font-size: 0.9rem; text-decoration: none; font-weight: 600;">Annuler et retourner au profil</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
