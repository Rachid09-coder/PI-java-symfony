{% extends 'admin_layout.html.twig' %}

{% block title %}Modifier Métier Avancé - EduSmart{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_metier_avance_index') }}" class="btn btn-link p-0 text-decoration-none">
        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
    </a>
    <h1 class="h3 mt-2">Modifier le métier avancé : {{ metier_avance.nom }}</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0 overflow-hidden">
            <div class="card-header bg-primary py-3">
                <h6 class="m-0 font-weight-bold text-white">Informations du Métier Avancé</h6>
            </div>
            <div class="card-body p-4">
                {{ include('metier_avance/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                
                <div class="mt-4 pt-4 border-top d-flex justify-content-end">
                    {{ include('metier_avance/_delete_form.html.twig', {metier_avance: metier_avance}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
