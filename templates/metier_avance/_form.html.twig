{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.metier, 'Métier Parent') }}
            {{ form_widget(form.metier, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.metier) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.nom, 'Nom du Métier Avancé') }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Senior Data Scientist'}}) }}
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Expertise et responsabilités...'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow">
            <i class="fas fa-save fs-5"></i>
            <span class="fw-bold">{{ button_label|default('Enregistrer le Métier Avancé') }}</span>
        </button>
    </div>
{{ form_end(form) }}
